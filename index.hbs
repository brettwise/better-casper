{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">Hi. I'm Brett.</h1>
            <h2 class="page-description">I'm a web developer consultant. I also help run <a target="_blank" href="http://chadev.com/">Chadev</a> (join our <a target="_blank" href="http://www.meetup.com/chadevs/">Meetup Group</a>!). These days I'm writing about Elixir, JavaScript, </br> and user experience design.</h2>

            <a target="_blank" href="mailto: me@brettwise.com"><img class="header-icons" src="{{asset "icons/email.png"}}" alt="email icon" /></a>
            <a target="_blank" href="http://www.last.fm/user/theonlyperson/library/artists?date_preset=LAST_365_DAYS"><img class="header-icons" src="{{asset "icons/lastfm.png"}}" alt="last.fm icon"/></a>
            <a target="_blank" href="https://github.com/brettwise"><img class="header-icons" src="{{asset "icons/git.png"}}" alt="github icon"/></a>
            <a target="_blank" href="https://www.linkedin.com/in/brettwise"><img class="header-icons" src="{{asset "icons/linkedin.png"}}" alt="linkedin icon"/></a>
            <a target="_blank" href="https://twitter.com/brettwise"><img class="header-icons" src="{{asset "icons/twitter.png"}}" alt="twitter icon"/></a>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span></span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
